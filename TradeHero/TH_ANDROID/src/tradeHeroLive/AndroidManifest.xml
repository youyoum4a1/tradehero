<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

  <!-- Required by Jumio -->
  <uses-permission android:name="android.permission.CAMERA"/>

  <!-- For Location Picker -->
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <!-- Required by Jumio -->
  <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>

  <application>

    <activity
        android:theme="@style/Theme.Netverify"
        android:name="com.jumio.netverify.sdk.activity.NetverifyActivity"
        android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"/>

    <activity
        android:name="com.androidth.general.activities.IdentityPromptActivity"
        android:theme="@style/TradeHero.Live"
        android:label="@string/tradehero_live"
        android:windowSoftInputMode="adjustResize"
        android:screenOrientation="portrait"
        android:noHistory="false"
        />

    <activity
        android:name="com.androidth.general.activities.SignUpLiveActivity"
        android:theme="@style/TradeHero.Live"
        android:label="@string/tradehero_live"
        android:windowSoftInputMode="adjustResize"
        android:screenOrientation="portrait"/>

    <!-- REQUIRED for Google Play Services (GCM)-->
    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

  </application>

</manifest>