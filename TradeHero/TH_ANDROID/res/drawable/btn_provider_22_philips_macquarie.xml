<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">

    <shape android:shape="rectangle">

      <gradient
          android:angle="270"
          android:endColor="@color/provider_22_colour_gradient"
          android:startColor="@color/provider_22_colour_main"/>

      <corners android:radius="4dp"/>

    </shape>

  </item>

  <item android:state_focused="true">

    <shape android:shape="rectangle">

      <gradient
          android:angle="270"
          android:endColor="@color/provider_22_colour_main"
          android:startColor="@color/provider_22_colour_gradient"/>

      <corners android:radius="4dp"/>

    </shape>

  </item>

  <item>

    <shape android:shape="rectangle">

      <gradient
          android:angle="270"
          android:endColor="@color/provider_22_colour_main"
          android:startColor="@color/provider_22_colour_gradient"/>

      <corners android:radius="4dp"/>

    </shape>

  </item>

</selector>