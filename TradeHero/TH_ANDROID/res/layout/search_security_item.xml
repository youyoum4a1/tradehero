<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.security.SecurityItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.tradehero.th"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/security_bg_border_padding"
    android:background="@drawable/security_item_grid_bg"
    >

  <com.makeramen.RoundedImageView
     android:id="@+id/stock_bg_logo"
     android:layout_width="match_parent"
     android:layout_height="@dimen/security_item_height"
     app:oval="false"
     android:scaleType="centerCrop"
     app:corner_radius="@dimen/security_bg_radius"
        />

  <ImageView
      android:id="@+id/country_logo"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginLeft="@dimen/search_stock_people_padding"
      android:layout_centerVertical="true"
      android:layout_marginRight="10dp"
      android:adjustViewBounds="true"
      android:contentDescription="@null"
      android:scaleType="centerInside"
      tools:src="@drawable/flag_country_round_australia"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="2dp"
      android:layout_toLeftOf="@+id/stock_details"
      android:layout_toRightOf="@+id/country_logo"
      android:paddingBottom="@dimen/search_stock_people_padding"
      android:paddingTop="@dimen/search_stock_people_padding"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:gravity="center_horizontal"
        android:lines="2"
        tools:text="Telus Corp."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/stock_logo"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        tools:src="@drawable/flag_country_round_australia"
        />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/stock_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_marginLeft="5dp"
      android:paddingRight="@dimen/search_stock_people_padding"
      android:paddingBottom="@dimen/search_stock_people_padding"
      android:paddingTop="@dimen/search_stock_people_padding"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/exchange_symbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="right"
        android:lines="1"
        tools:text="NYSE:TU"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="-4dp"
        android:gravity="right"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/ic_market_close"
          android:layout_width="12dp"
          android:layout_height="12dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:baselineAlignBottom="true"
          android:contentDescription="@null"
          android:scaleType="centerInside"
          android:src="@drawable/market_sleep_grey"
          />

      <TextView
          android:id="@+id/profit_indicator"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="0sp"
          android:lines="1"
          tools:text="@string/arrow_prefix_positive"
          android:textColor="@color/black"
          android:textSize="24sp"/>

      <TextView
          android:id="@+id/currency_display"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="2dp"
          android:layout_marginRight="2dp"
          android:lines="1"
          tools:text="US$"
          android:textColor="@color/text_gray_normal"
          android:textSize="13sp"/>

      <TextView
          android:id="@+id/last_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:lines="1"
          tools:text="8.80"
          android:textColor="@color/text_gray_normal"
          android:textSize="13sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="right"
        android:lines="1"
        tools:text="19 Feb 19:06"
        android:textColor="@color/text_gray_normal"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/sec_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:lines="1"
        tools:text="Equity"
        android:textColor="@color/sec_type"
        android:textSize="14sp"/>

  </LinearLayout>

</com.tradehero.th.fragments.security.SecurityItemView>