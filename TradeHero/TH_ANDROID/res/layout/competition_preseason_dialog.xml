<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="@dimen/provider_preseason_popup_width"
    android:layout_gravity="center"
    android:background="@drawable/rectangle_round_corner_white_bg"
    >

  <ViewFlipper
      android:id="@+id/preseason_viewflipper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inAnimation="@anim/alpha_in"
      android:outAnimation="@anim/alpha_out"
      android:measureAllChildren="true"
      android:layout_centerInParent="true"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

      <ImageView
          android:id="@+id/preseason_title_image"
          android:layout_width="@dimen/provider_preseason_title_image_w"
          android:layout_height="@dimen/provider_preseason_title_image_h"
          android:layout_margin="@dimen/margin_small"
          android:scaleType="fitCenter"
          tools:src="@drawable/upgrade_alerts_pressed"
          />

      <ImageView
          android:id="@+id/preseason_prize_image"
          android:layout_width="@dimen/provider_preseason_prize_image_w_h"
          android:layout_height="@dimen/provider_preseason_prize_image_w_h"
          tools:src="@drawable/launcher"
          />

      <com.androidth.general.widget.MarkdownTextView
          android:id="@+id/preseason_prize_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TH.Title"
          android:gravity="center"
          android:text="@string/preseason_giveaway"
          android:layout_margin="@dimen/margin_small"
          />

      <com.androidth.general.widget.MarkdownTextView
          android:id="@+id/preseason_prize_description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TH.Subhead"
          android:gravity="center"
          tools:text="Spread the word and stand a chance to win an \n**iPhone 6**!"
          android:layout_margin="@dimen/margin_small"
          />

      <Button
          android:id="@+id/preseason_prize_tncs"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TH.Button.Small.Accented"
          android:text="@string/tncs_apply"
          android:background="@drawable/basic_transparent_selector"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/clickable_element_min_dimen"
          android:gravity="center"
          >

        <include layout="@layout/share_panel_layout"/>
      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/tradehero_divider_grey"
          />

      <Button
          android:id="@+id/preseason_share"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Button.Accented"
          android:text="@string/share_now"
          android:background="@drawable/basic_transparent_selector"
          />

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        style="@style/TH.Loading_Error_Text"
        android:text="@string/preseason_error_message"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          style="@style/TH.Loading_Error_Text"
          android:text="@string/preseason_share_error_message"
          />

      <Button
          android:id="@+id/preseason_share_retry"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/retry"
          />

    </LinearLayout>

  </ViewFlipper>

  <ImageView
      android:id="@+id/close"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      style="@style/TH.Btn_Popup_Close"
      />

</RelativeLayout>