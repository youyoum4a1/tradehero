<?xml version="1.0" encoding="utf-8"?>
<com.tradehero.th.fragments.trending.SearchPeopleItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/grid_item_height"
    android:background="@drawable/grid_item_bg"
    android:padding="@dimen/grid_item_bg_border_width"
    >

  <com.makeramen.RoundedImageView
      android:id="@+id/people_bg_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:corner_radius="@dimen/grid_item_bg_radius"
      app:oval="false"
      android:scaleType="centerCrop"
      android:src="@null"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="4dp">

    <ImageView
        android:id="@+id/people_logo"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/sort_community"/>

    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="@dimen/big_avatar_w_h"
        android:layout_height="@dimen/big_avatar_w_h"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/people_logo"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/avatar"/>

    <LinearLayout
        android:id="@+id/user_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/user_photo"
        android:orientation="vertical"
        tools:background="@color/red"
        >

      <TextView
          android:id="@+id/user_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:gravity="right"
          android:lines="1"
          android:textColor="@color/black"
          android:textSize="@dimen/text_small"
          android:textStyle="bold"
          tools:text="user name"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:gravity="right"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/profit_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text=">"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"/>

        <TextView
            android:id="@+id/stock_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xsmall"
            tools:text="12.4%"
            />
      </LinearLayout>

      <TextView
          android:id="@+id/date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:layout_marginTop="4dp"
          android:gravity="right"
          android:lines="1"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:textSize="@dimen/text_xsmall"
          tools:text="date"
          />
    </LinearLayout>
  </RelativeLayout>

</com.tradehero.th.fragments.trending.SearchPeopleItemView>