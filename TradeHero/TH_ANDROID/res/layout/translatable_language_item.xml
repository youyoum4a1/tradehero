<?xml version="1.0" encoding="utf-8"?>

<com.tradehero.th.fragments.translation.TranslatableLanguageItemLinearView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="1"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/translatable_text_own_language"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_small"
          tools:text="franÃ§ais"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="4dp"
          android:paddingRight="4dp"
          android:textSize="@dimen/text_small"
          android:text="-"
          />

      <TextView
          android:id="@+id/translatable_text_local"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_small"
          tools:text="French"
          />

    </LinearLayout>

    <TextView
        android:id="@+id/translatable_text_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_xsmall"
        tools:text="en"
        />

  </LinearLayout>

  <ImageView
      android:id="@+id/translatable_tick_is_current"
      android:layout_width="@dimen/small_icon_w_h"
      android:layout_height="@dimen/small_icon_w_h"
      android:src="@drawable/ic_tick_green"
      android:layout_gravity="center_vertical"
      android:visibility="gone"
      android:contentDescription="@null"/>

</com.tradehero.th.fragments.translation.TranslatableLanguageItemLinearView>