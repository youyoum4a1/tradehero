    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/general_brand_color"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Headline.Inverse"
          android:gravity="center"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Inverted Styles"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display4.Inverse"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 4\n-112sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display3.Inverse"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 3\n-56sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display2.Inverse"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 2\n-45sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display1.Inverse"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 1\n-34sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Headline.Inverse"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Headline\n-24sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Title.Inverse"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Title\n-20sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Subhead.Inverse"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Subhead\n-16sp"
          tools:ignore="HardcodedText"/>

      <TextView
