<?xml version="1.0" encoding="utf-8"?>
<com.etiennelawlor.quickreturn.library.views.NotifyingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/typography_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Headline"
          android:gravity="center"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Normal Styles"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display4"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 4\n-112sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display3"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 3\n-56sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display2"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 2\n-45sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display1"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 1\n-34sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Headline"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Headline\n-24sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Title"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Title\n-20sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Subhead"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Subhead\n-16sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Body"
          android:textStyle="bold"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Body 2\n-14sp\n-Medium"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Body"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Body 1\n-14sp\n-Light"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Caption"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Caption\n-12sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Menu"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Menu\n-14sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Button"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Button\n-14sp\n-all caps"
          tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Headline.Accented"
          android:gravity="center"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Accented Styles"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display4.Accented"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 4\n-112sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display3.Accented"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 3\n-56sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display2.Accented"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 2\n-45sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Display1.Accented"
          android:singleLine="true"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Display 1\n-34sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Headline.Accented"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Headline\n-24sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Title.Accented"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Title\n-20sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Subhead.Accented"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Subhead\n-16sp"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Body.Accented"
          android:textStyle="bold"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Body 2\n-14sp\n-Medium"
          tools:ignore="HardcodedText"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TH.Body.Accented"
          android:layout_marginBottom="@dimen/margin_medium"
          android:text="Body 1\n-14sp\n-Light"
          tools:ignore="HardcodedText"/>

      <TextView
