<?xml version="1.0" encoding="utf-8"?>

<com.androidth.general.fragments.billing.StoreItemClickableView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/basic_white_selector"
  >
  <ImageView
      android:id="@+id/icon"
      android:layout_width="@dimen/medium_image_w_h"
      android:layout_height="@dimen/medium_image_w_h"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp"
      android:layout_centerVertical="true"
      android:scaleType="fitXY"
      android:contentDescription="@null"
      tools:src="@drawable/icn_follow_credits"
    />

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/icon"
      android:layout_toEndOf="@id/icon"
      android:layout_centerVertical="true"
      style="@style/TH.Subhead"
      tools:text="Credits"
    />

</com.androidth.general.fragments.billing.StoreItemClickableView>
