<?xml version="1.0" encoding="utf-8"?>
<com.ayondo.academy.fragments.onboarding.stock.OnBoardStockItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:alphaUnSelected="@dimen/on_board_alpha_unselected"
    >

  <com.ayondo.academy.fragments.security.SecurityItemView
      android:id="@+id/security_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="@dimen/grid_item_height"
      tools:context=".activities.DashboardActivity"
      android:gravity="center_vertical"
      android:background="@drawable/grid_item_bg"
      >

      <include layout="@layout/trending_security_item_inner"/>

    <ImageView
        android:id="@android:id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/tick_green"
        android:visibility="gone"
        android:contentDescription="@null"
        tools:visibility="visible"
        />

  </com.ayondo.academy.fragments.security.SecurityItemView>

</com.ayondo.academy.fragments.onboarding.stock.OnBoardStockItemView>