    <item name="android:textColor">?android:textColorPrimary</item>
  </style>

  <style name="TH.Caption.Portfolio" parent="TH.Caption">
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="TH.Body.Accented" parent="TH.Body">
    <item name="android:textColor">?android:textColorHighlight</item>
  </style>

  <style name="TH.Menu.Accented" parent="TH.Menu">
    <item name="android:textColor">?android:textColorHighlight</item>
  </style>

  <style name="TH.Button.Accented" parent="TH.Button">
    <item name="android:textColor">?android:textColorHighlight</item>
  </style>

  <style name="TH.Button.Small.Accented" parent="TH.Button.Small">
    <item name="android:textColor">?android:textColorHighlight</item>
  </style>

  <!--  -->

  <style name="TH.InfoKey" parent="TH.Body">
    <item name="android:padding">2dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
  </style>

  <style name="TH.InfoValue" parent="TH.Body">
    <item name="android:padding">2dp</item>
  </style>

  <style name="TutorialTextContent" parent="TH.Body1.Inverse">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="TutorialTextHeader" parent="TH.Subhead.Inverse">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textStyle">bold</item>
    <item name="android:drawableLeft">@drawable/ic_action_action_about</item>
  </style>

  <style name="TH.Time_Text" parent="TH.Caption">
  </style>

  <style name="TH.Time_Text.Header" parent="TH.Title.Inverse">
  </style>

  <style name="TH.Time_Text.Header.Inverse" parent="TH.Title">
  </style>

  <style name="TH.Loading_Error_Text" parent="TH.Subhead">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="TH.Loading_Empty_Text"
      parent="@style/TH.Loading_Error_Text">
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="TH.UserNameTitle" parent="TH.Subhead">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">middle</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="TH.UserNameTitle.Inverse" parent="TH.Subhead.Inverse">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">middle</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="TH.UserROI" parent="TH.Body">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TH.UserROI.Inverse" parent="TH.Body">
    <item name="android:textColor">@color/text_primary_inverse</item>
  </style>

  <style name="UserProfile.Contained.Value" parent="TH.Title.Inverse">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="UserProfile.Contained.Header" parent="TH.Caption.Inverse">
    <item name="android:drawablePadding">3dp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TH.NumericalAnimatedTextView" parent="TH.Title">
    <item name="android:gravity">center</item>
    <item name="animatedDuration">2500</item>
    <item name="animatedInterval">50</item>
    <item name="showAnimation">true</item>
  </style>

  <style name="TH.NumericalAnimatedTextViewSmall" parent="TH.Caption">
    <item name="android:gravity">center</item>
    <item name="animatedDuration">2500</item>
    <item name="animatedInterval">50</item>
    <item name="showAnimation">true</item>
  </style>

  <style name="TH.DiscussionTextBox" parent="TH.Body">
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:padding">@dimen/discussion_action_buttons_drawable_padding</item>
    <item name="android:inputType">text|textMultiLine|textImeMultiLine|textCapSentences|textAutoCorrect|textAutoComplete</item>
  </style>

  <style name="TradeHero_Settings_About_Text" parent="TH.Title">
    <item name="android:textColor">@color/settings_about_font_colour</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:background">@null</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="TH.EditText" parent="TH.Title.Accented">
    <item name="android:background">@color/transparent</item>
  </style>

</resources>